			<form action="#" method="post">
				<input class="email" type="email" placeholder="Uw mail adres" /><br />
				<input class="subject" type="text" placeholder="Onderwerp" /><br />
				<textarea class="bug" placeholder="Feedback"></textarea><br />
				<input type="submit" value="versturen" />
			</form>
		</div>
		<a href="#" id="bug-report">Feedback</a>
    <header>
        <h1>Melden + Leerpark</h1>
    </header>
    @RenderBody()
</body>
</html>