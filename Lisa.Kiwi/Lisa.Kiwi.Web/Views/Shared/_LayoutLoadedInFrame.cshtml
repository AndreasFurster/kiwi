<html lang="nl">
<head>
	<title>@ViewBag.Title</title>
	<meta charset="utf-8">
	@Styles.Render("~/bundles/styles")
	<script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
	<script>
		if (!window.jQuery) {
			document.write('<script src="/Scripts/jquery-1.11.2.min.js"><\/script>');
		}
	</script>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
	@RenderBody()
	@Scripts.Render("~/bundles/frameScripts")

	@RenderSection("Scripts", required: false)
    <script>
        var category = "@ViewBag.ReportCategory"
        if (typeof (Storage) !== "undefined" && localStorage.Category !== category && !(category.length === 0 || !category.trim() || category === null)) {
            localStorage.Category = category;
        } else {
            // Sorry! No Web Storage support..
        }
        if (!(localStorage.Category.length === 0 || !localStorage.Category.trim() || localStorage.Category === null)) {
            $('legend i').first().after(localStorage.Category + " - ");
        }
    </script>
</body>
</html>