@if (Model.FighterCount != null)
{
	<div class="field">
		<h2>@ReportProperties.ResourceManager.GetString("FightCount")</h2>
		<div class="donePadding">
			<p>@DashboardHelpers.NullCheck(Model.FighterCount)</p>
		</div>
	</div>

}

@if (Model.IsWeaponPresent != null)
{
	<div class="field">
		<h2>@ReportProperties.ResourceManager.GetString("WeaponPresent")</h2>
		<div class="donePadding">
			<p>@DashboardHelpers.NullCheck(Model.IsWeaponPresent)</p>
		</div>
	</div>
}

@if (Model.IsWeaponPresent == true)
{
    <div class="field">
				<h2>@ReportProperties.ResourceManager.GetString("WeaponType")</h2>
				<div class="donePadding">
				<p>@DashboardHelpers.NullCheck(Model.WeaponType)</p>
			</div>
    </div>

    <div class="field">
        <h2>@ReportProperties.ResourceManager.GetString("WeaponLocation")</h2>
				<div class="donePadding">
				<p>@DashboardHelpers.NullCheck(Model.WeaponLocation)</p>
			</div>
    </div>
}

@if (Model.Description != null)
{
	<div class="field">
		<h2>@ReportProperties.Description</h2>
		<div class="donePadding">
			<p>@Model.Description</p>
		</div>
	</div>
}