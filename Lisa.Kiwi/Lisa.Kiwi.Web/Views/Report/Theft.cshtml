@model TheftViewModel

@section Scripts{
	<script src="~/Scripts/Theft.js"></script>
	<link rel="stylesheet" type="text/css" href="~/Content/jquery.datetimepicker.css" />
	<script src="~/Scripts/jquery.datetimepicker.js"></script>
	<script src="~/Scripts/pop-up.js"></script>
}

@{
	ViewBag.Title = Categories.Theft;
}

@using (Html.BeginForm())
{
	<fieldset>
		<legend>@DisplayNames.StolenObject</legend>
		@Html.TextBoxFor(m => m.StolenObject)
		@Html.ValidationMessageFor(m => m.StolenObject)
		<span class="required">verplicht veld</span>
	</fieldset>
	<fieldset>
		<legend>@DisplayNames.DateOfTheft</legend>
		@Html.TextBoxFor(m => m.DateOfTheft)
		@Html.ValidationMessageFor(m => m.DateOfTheft)
		<span class="required">verplicht veld</span>
	</fieldset>
	@Html.Partial("~/Views/Report/PopUpPartials/Perpetrator.cshtml", new PerpetratorViewModel())
	@Html.Partial("~/Views/Report/PopUpPartials/Vehicle.cshtml", new VehicleViewModel())
	<fieldset>
		<legend>@DisplayNames.Description</legend>
		@Html.TextAreaFor(m => m.Description)
	</fieldset>
	@Html.HiddenFor(m => m.Vehicles)
	@Html.HiddenFor(m => m.Perpetrators)
	<button type="submit"><img src="@Url.Content("~/Content/next.svg")" /></button>
}
<div class="overlay"></div>