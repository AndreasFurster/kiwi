@model ContactRequiredViewModel

@using (Html.BeginForm())
{	
		<fieldset>
			<legend>@DisplayNames.ContactName</legend>
			@Html.TextBoxFor(m => m.Name)
			<span class="required">verplicht veld</span>
		</fieldset>
		<fieldset>
			<legend>@DisplayNames.ContactPhoneNumber</legend>
			@Html.TextBoxFor(m => m.PhoneNumber)
			<span class="required">telefoonnummer of e-mailadres is verplicht</span>
		</fieldset>
		<fieldset>
			<legend>@DisplayNames.ContactEmail</legend>
			@Html.TextBoxFor(m => m.EmailAddress)
			<span class="required">telefoonnummer of e-mailadres is verplicht</span>
		</fieldset>
	<button type="submit"><img src="@Url.Content("~/Content/next.svg")" /></button>
}