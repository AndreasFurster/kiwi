@model Report


@using (Html.BeginForm())
{
	<div class="field">
		<label>&nbsp;</label>
		<p>
			@PageItems.DoneMessage
			@if (Model.Category == "FirstAid" || Model.Category == "Fight")
			{
				@PageItems.HelpOnTheWay
			}
			else
			{
				@PageItems.TakenAction
			}
		</p>
	</div>
	<div class="field">
		<label>&nbsp;</label>
		<p><a href="~/Report/EditDone">Klik hier om uw eerder ingevulde waarden aan te passen.</a></p>
	</div>

	if (Model.Category != null)
	{
		@Html.Partial("~/Views/Shared/Partials/Report/_PartialReturnReportCategory.cshtml", Model)
		@Html.Partial("~/Views/Shared/Partials/Details/_PartialDetails" + Model.Category + ".cshtml", Model)
	}
	if (Model.Location != null)
	{
		@Html.Partial("~/Views/Shared/Partials/Report/_PartialReturnReportLocation.cshtml", Model)
	}

	if (Model.Perpetrator != null)
	{
		@Html.Partial("~/Views/Shared/Partials/Report/_PartialReturnReportPerpetrator.cshtml", Model);
	}

	if (Model.Contact != null)
	{
		@Html.Partial("~/Views/Shared/Partials/Report/_PartialReturnReportContact.cshtml", Model);
	}
	if (Model.Vehicle != null)
	{
		@Html.Partial("~/Views/Shared/Partials/Report/_PartialReturnReportVehicle.cshtml", Model);
	}
	<input type="hidden" name="category" value="@Model.Category" />
	<div class="submit">
		<button type="submit"><img src="@Url.Content("~/Content/next.svg")" /></button>
	</div>
}