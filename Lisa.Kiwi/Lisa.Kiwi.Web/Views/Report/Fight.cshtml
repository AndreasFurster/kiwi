@model FightViewModel

@section Scripts{
	<script src="~/Scripts/Description.js"></script>
}

@{
	ViewBag.Title = Categories.Fight;
}

<h2>Fight</h2>
@using (Html.BeginForm())
{
	<p>
		@Html.LabelFor(m => m.FighterCount)
		@Html.TextBoxFor(m => m.FighterCount, new { @type = "number" })*
	</p>
	<p>
		@Html.LabelFor(m => m.IsWeaponPresent)
		@Html.CheckBoxFor(m => m.IsWeaponPresent)*
	</p>
	<p id="Button">
		<button type="button">Overige info</button>
	</p>
	<p id="Desc">
		@Html.LabelFor(m => m.Description)
		@Html.TextBoxFor(m => m.Description)
	</p>
	<input type="submit" value="Verzenden"/>
	<text>*verplicht veld</text>
}