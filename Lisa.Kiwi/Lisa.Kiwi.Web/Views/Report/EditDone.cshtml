@model EditDoneViewModel

@{
	Report Report = ViewBag.Report;
	var isUnconscious = (bool) Report.IsUnconscious ? new { @checked = "true"} : null;
	var isNotUnconscious = (bool) Report.IsUnconscious ? null : new { @checked = "true" };		
}

@using (Html.BeginForm())
{
	if (Report.Category == "FirstAid")
	{
		<div class="field">
			<label>@ReportProperties.ResourceManager.GetString("IsUnconsious")</label>
			@Html.RadioButtonFor(m => m.IsUnconscious, true, isUnconscious) Ja
			@Html.RadioButtonFor(m => m.IsUnconscious, false, isNotUnconscious) Nee
		</div>
	}
	<div class="submit">
		<button type="submit"><img src="@Url.Content("~/Content/next.svg")" /></button>
	</div>
}