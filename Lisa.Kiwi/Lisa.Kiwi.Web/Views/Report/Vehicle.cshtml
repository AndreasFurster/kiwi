@model VehicleViewModel
@{
    ViewBag.Title = "Vehicle";
}
<script>
	$(document).ready(function() {
		$("#form-content").hide();
	})
</script>

@using (Html.BeginForm())
{
	<div class="field">
		<label>
			Is er een voertuig betrokken bij deze melding?
		</label>
		<button type="button" onclick=" $('#form-content').show() ">Ja</button>
		<button type="submit" name="HasVehicle" value="false">Nee</button>
	</div>
	
	<div id="form-content">
		<div class="field">
			@Html.LabelFor(m => m.Color)
			@Html.TextBoxFor(m => m.Color)
		</div>
		<div class="field">
			@Html.LabelFor(m => m.Brand)
			@Html.TextBoxFor(m => m.Brand)
		</div>
		<div class="field">
			@Html.LabelFor(m => m.NumberPlate)
			@Html.TextBoxFor(m => m.NumberPlate)
		</div>
		<div class="field">
			@Html.LabelFor(m => m.AdditionalFeatures)
			@Html.TextBoxFor(m => m.AdditionalFeatures)
		</div>
		<div class="submit">
			<button type="submit" name="HasVehicle" value="true"><img src="@Url.Content("~/Content/next.svg")"/></button>
		</div>
		
	</div>
}