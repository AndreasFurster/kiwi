@{
	ViewBag.Title = "Error";
}

<div class="container">
	<div class="field">
		<label>Er is een fout opgetreden!</label>
		<div class="button-container">@Html.ActionLink("Probeer opnieuw", "index", "Report")</div>
	</div>
</div>

<script>
	var message = (function () {/* @Model.Message */})
		.toString().match(/[^]*\/\*([^]*)\*\/\}$/)[1];
	var stacktrace = (function () {/* @Model.StackTrace */})
		.toString().match(/[^]*\/\*([^]*)\*\/\}$/)[1];
			
	console.warn(message);
	console.info(stacktrace);
</script>

