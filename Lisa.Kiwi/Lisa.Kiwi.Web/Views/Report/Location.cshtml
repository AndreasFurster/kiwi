@model LocationViewModel

@{
	ViewBag.Title = "Locatie";
}

@using (Html.BeginForm())
{
	<fieldset>
			<legend>Waar is het gebeurd?</legend>
			<p>Buiten</p>
				@foreach (var building in new string[] { "Buiten", "BetaaldeParkeerplaats", "GroteParkeerplaats" })
				{
					<button name="Building" value="@building" class="hyphenate">
						<img src="@Url.Content(String.Format("~/Content/ReporterBuildings/building-{0}.png", building))" />
						@ReportHelpers.Capitalize(Resources.Buildings.ResourceManager.GetString(building))
					</button>
				}

			<p>Da Vinci College</p>

				@foreach (var building in new string[] { "Arcobaleno", "Azzurro", "Bianco", "Celeste", "Media", "Duurzaamheidsfabriek", "Giallo", "Indaco", "Lilla", "Marrone", "Ocra", "Romboutslaan", "Rosa", "Verde" })
				{
					<button name="Building" value="@building" class="hyphenate">
						<img src="@Url.Content(String.Format("~/Content/ReporterBuildings/building-{0}.png", building))" />
						@ReportHelpers.Capitalize(Resources.Buildings.ResourceManager.GetString(building))
					</button>
				}

			<p>Overige</p>
			@foreach (var building in new string[] { "Appartementen", "Bogermanschool", "Brandweerkazerne", "Drechtstedencollege", "Klimhal", "Orthodontist", "Samenwerkingsgebouw", "Schippersinternaat", "Sporthal", "Veiligheidsregio", "Wartburg" })
			{
				<button name="Building" value="@building" class="hyphenate">
					<img src="@Url.Content(String.Format("~/Content/ReporterBuildings/building-{0}.png", building))" />
					@ReportHelpers.Capitalize(Resources.Buildings.ResourceManager.GetString(building))
				</button>
			}
	</fieldset>
}