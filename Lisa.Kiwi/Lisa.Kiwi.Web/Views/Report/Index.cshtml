@model CategoryViewModel

@{
	ViewBag.Title = "Categorie";
}
<section class="icons">
	@using (Html.BeginForm())
    {
		<fieldset>
			<legend><i class="fa fa-exclamation-circle"></i>&nbsp;&nbsp;@DisplayNames.Index</legend>
			@foreach (var item in Model.Categories)
			{
				<button name="Category" value="@item.Value">
					<img src='@String.Format("/Content/category-{0}.png", item.Value)'>
					@item.Text
				</button>
			}
		</fieldset>
	}
</section>