@using System.Runtime.InteropServices.ComTypes
@model Lisa.Kiwi.WebApi.Report
@{
  Layout = null;
}

<!doctype html>

<html>
<head>
  <title>Leerpark</title>
  <link href="~/Content/main.css" rel="stylesheet" type="text/css">
</head>

<body>
  <h1>@Resources.Categories.ResourceManager.GetString("FirstAid")</h1>

  <dl>
    <dt>Het Meldingstype.</dt>
    <dd>@Resources.Categories.ResourceManager.GetString("FirstAid")</dd>

    <dt>Tijdstip vam de melding.</dt>
    <dd>@Model.Created.ToString("dddd d MMMM HH:mm")</dd>

    <dt>Locatie + bescheiving.</dt>
    <dd>@Model.Location.Building - @Model.Location.Description</dd>

    <dt>Huidige status van het incident.</dt>
    <dd>@Resources.Statuses.ResourceManager.GetString("Status" + Model.CurrentStatus.ToString())</dd>

    <dt>Is dit voor iedereen zichtbaar?</dt>
    <dd>@Resources.Statuses.ResourceManager.GetString("Visible" + Model.IsVisible.ToString())</dd>
    
    @Html.Partial("_PartialDetails" + Model.Category, Model)

  </dl>

  @if (ViewBag.Contact != null)
  {
    <h2>Contact:</h2>
    <dl>
      <dt>Naam van de melder (Indien ingevult)</dt>
      <dd>@ViewBag.Contact.Name</dd>

      <dt>Telefoonnummer van de melder (Indien ingevult)</dt>
      <dd>@ViewBag.Contact.PhoneNumber</dd>

      <dt>E-mailadres van de melder (Indien ingevult)</dt>
      <dd>@ViewBag.Contact.EmailAddress</dd>
    </dl>
  }

<hr/>

@using (Html.BeginForm())
  {
    <dl>
      <dt>Status</dt>
      <dd>
        @Html.DropDownList("status", (IEnumerable<SelectListItem>) ViewBag.StatusNames)
      </dd>
      <dt>Wilt u dat dit zichtbaar is? (aangevinkt is "Ja", Leeg is "Nee".)</dt>
      <dd>
        @Html.CheckBox("IsVisible")
      </dd>
      <dd><input type="submit" value="Opslaan"/></dd>
    </dl>
  }
    <p>@Html.ActionLink("Ga terug naar de startpagina", "Index", "Dashboard", null, new { @class = "btn btn-default btn-report" })</p>
</body>
</html>