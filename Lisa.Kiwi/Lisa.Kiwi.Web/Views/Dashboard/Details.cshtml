@model Report

@Html.Partial("~/Views/Shared/Partials/Report/_PartialReturnReportCategory.cshtml", Model.Category)

@if (Model.Location != null)
{
	@Html.Partial("~/Views/Shared/Partials/Report/_PartialReturnReportLocation.cshtml", Model.Location)
}

@Html.Partial("~/Views/Shared/Partials/Details/_PartialDetailsCreatedAt.cshtml", Model.Created)

@Html.Partial("~/Views/Shared/Partials/Details/_PartialDetails" + Model.Category + ".cshtml", Model)

@if (Model.Perpetrators != null)
{
	@Html.Partial("~/Views/Shared/Partials/Details/_PartialDetailsPerpetrators.cshtml", Model.Perpetrators);
}

@if (Model.Contact != null)
{
	@Html.Partial("~/Views/Shared/Partials/Report/_PartialReturnReportContact.cshtml", Model.Contact);
}

@if (Model.Vehicles != null)
{
	@Html.Partial("~/Views/Shared/Partials/Report/_PartialReturnReportVehicles.cshtml", Model.Vehicles);
}

@using (Html.BeginForm())
{
	<div class="field">
		<label>@PageItems.Status</label>
		<ul class="radioList">
			<li><input type="radio" name="Status" value="@StatusEnum.Open" @(Model.Status == StatusEnum.Open ? "checked=\"checked\"" : "") /> @Statuses.Open</li>
			<li><input type="radio" name="Status" value="@StatusEnum.Transferred" @(Model.Status == StatusEnum.Transferred ? "checked=\"checked\"" : "") /> @Statuses.Transferred</li>
			<li><input type="radio" name="Status" value="@StatusEnum.Solved" @(Model.Status == StatusEnum.Solved ? "checked=\"checked\"" : "") /> @Statuses.Solved</li>
		</ul>
	</div>
	if (Request.Cookies["role"] != null && Request.Cookies["role"].Value == "Administrator")
	{
		<div class="field">
			<label>@PageItems.VisibleChange</label>
			@(!Model.IsVisible ? Html.CheckBox("IsVisible") : Html.CheckBox("IsVisible", new { @checked = "true" }))
		</div>
	}

	<div class="field">
		<button type="submit">Status wijzigen</button>
	</div>
	<div class="button-container">@Html.ActionLink("terug", "index", "dashboard")</div>
}