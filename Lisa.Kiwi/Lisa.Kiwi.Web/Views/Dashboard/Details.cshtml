@using Resources;
@model Lisa.Kiwi.WebApi.Report
@{
	Layout = null;
}

<!doctype html>

<html>
    <head>
      <title>Leerpark</title>
      <link href="~/Content/main.css" rel="stylesheet" type="text/css">
    </head>
    <body>
	    <h1>@Categories.ResourceManager.GetString(Model.Category):</h1>

	    <dl>
		    <dt>@PageItems.ResourceManager.GetString("TypeDescription")</dt>
		    <dd>@Categories.ResourceManager.GetString(Model.Category)</dd>

		    <dt>@PageItems.ResourceManager.GetString("DateDescription")</dt>
		    <dd>@Model.Created.ToString("dddd d MMMM HH:mm")</dd>

		    <dt>@PageItems.ResourceManager.GetString("LocationDescription")</dt>
		    <dd>@Model.Location.Building - @Model.Location.Description</dd>

		    <dt>@PageItems.ResourceManager.GetString("StatusDescription")</dt>
		    <dd>Open</dd>

		    <dt>@PageItems.ResourceManager.GetString("VisibleDescription")</dt>
		    <dd>@Statuses.ResourceManager.GetString("Visible" + Model.IsVisible.ToString())</dd>

		    @Html.Partial("CategoryPartials/" + "_PartialDetails" + Model.Category, Model)

	    </dl>
	    @* TODO: Find a better solution than this, as it makes and empty Contact.*@
	    @if (Model.Contact != null)
		    {
			    <h2>@PageItems.ResourceManager.GetString("Contact")</h2>
			    <dl>
				    <dt>@PageItems.ResourceManager.GetString("ContactName")</dt>
				    <dd>@DashboardHelpers.NullCheck(Model.Contact.Name)</dd>
				    <dt>@PageItems.ResourceManager.GetString("ContactPhoneNumber")</dt>
				    <dd>@DashboardHelpers.NullCheck(Model.Contact.PhoneNumber)</dd>

				    <dt>@PageItems.ResourceManager.GetString("ContactEmail")</dt>
				    <dd>@DashboardHelpers.NullCheck(Model.Contact.EmailAddress)</dd>
			    </dl>
		    }

	    @if (Model.Perpetrator != null)
		    {
			    <h2>@Perpetrator.ResourceManager.GetString("Perpetrators")</h2>
			    <dl>
				    <dt>@Perpetrator.ResourceManager.GetString("Name")</dt>
				    <dd>@DashboardHelpers.NullCheck(Model.Perpetrator.Name)</dd>

				    <dt>@Perpetrator.ResourceManager.GetString("Sex")</dt>
				    <dd>@DashboardHelpers.NullCheck(Model.Perpetrator.Sex.ToString())</dd>

				    <dt>@Perpetrator.ResourceManager.GetString("SkinColor")</dt>
				    <dd>@DashboardHelpers.NullCheck(Model.Perpetrator.SkinColor)</dd>

				    <dt>@Perpetrator.ResourceManager.GetString("Clothing")</dt>
				    <dd>@DashboardHelpers.NullCheck(Model.Perpetrator.Clothing)</dd>

				    <dt>@Perpetrator.ResourceManager.GetString("MinAge")</dt>
				    <dd>@DashboardHelpers.NullCheck(Model.Perpetrator.MinimumAge)</dd>

				    <dt>@Perpetrator.ResourceManager.GetString("MaxAge")</dt>
				    <dd>@DashboardHelpers.NullCheck(Model.Perpetrator.MaximumAge)</dd>

				    <dt>@Perpetrator.ResourceManager.GetString("UniqueProp")</dt>
				    <dd>@DashboardHelpers.NullCheck(Model.Perpetrator.UniqueProperties)</dd>
			    </dl>
		    }

	    <hr />

	    @using (Html.BeginForm())
		    {
			    <dl>
				    <dt>@PageItems.ResourceManager.GetString("Status")</dt>
				    <dd>@Html.DropDownList("status", (IEnumerable<SelectListItem>)ViewBag.StatusNames)</dd>

				    <dt>@PageItems.ResourceManager.GetString("VisibleChange")</dt>
				    <dd>@Html.CheckBox("IsVisible")</dd>

				    <dd><input type="submit" value="Opslaan" /></dd>
			    </dl>
		    }
	    <p>@Html.ActionLink("Ga terug naar de startpagina", "Index", "Dashboard", null, new { @class = "btn btn-default btn-report" })</p>
    </body>
</html>