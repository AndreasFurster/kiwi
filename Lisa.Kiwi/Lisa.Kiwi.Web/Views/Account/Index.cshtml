@model IEnumerable<User>
@{
	ViewBag.Title = "Gebruikers";
}
<div class="container">
	<fieldset>
		<legend>Wachtwoorden wijzigen</legend>
		<table class="changepassword">
			<thead>
				<tr>
					<th>@DisplayNames.UserName</th>
					<th>@DisplayNames.Role</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var user in Model)
				{
					<tr>
						<td>@user.UserName</td>
						<td>@user.Role</td>
						<td class="changepassword">@Html.ActionLink("Wijzigen", "EditPassword", new { id = user.Id, userName = user.UserName }) </td>
					</tr>
				}
			</tbody>
		</table>
	</fieldset>
	<div class="field backbutton fa fa-arrow-left">
		@Html.ActionLink("Terug", "Index", "Dashboard")
	</div>
</div>