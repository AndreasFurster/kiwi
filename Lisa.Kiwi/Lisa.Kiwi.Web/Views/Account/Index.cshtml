@model IEnumerable<User>
@{
    ViewBag.Title = "Gebruikers";
}
<div class="field">
	<label>Gebruikers</label>
	<table>
		<thead>
			<tr>
				<th></th>
				<th>@DisplayNames.UserName</th>
				<th>@DisplayNames.Role</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<td>@Html.ActionLink("Wachtwoord wijzigen", "EditPassword", new{id = user.Id, userName = user.UserName}) </td>
					<td>@user.UserName</td>
					<td>@user.Role</td>
				</tr>
			}
		</tbody>
	</table>
</div>