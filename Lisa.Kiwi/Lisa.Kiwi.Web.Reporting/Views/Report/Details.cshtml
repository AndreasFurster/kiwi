@model Lisa.Kiwi.Web.Reporting.Models.OriginalReport

@{
    ViewBag.Title = "Report";
}

<div class="center-box">
    <h2>Report</h2>

    @using (Html.BeginForm("Check", "Report"))
    {
        @Html.ValidationSummary();

        <div class="form-group">
            <label class="col-sm-12 control-label">Locatie</label>
            <div class="col-sm-12">
                @Html.TextBoxFor(o => o.Location, new { @required = "required" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label">Datum</label>
            <div class="col-sm-12">
                @Html.TextBoxFor(o => o.Time, new { @required = "required", @Value = DateTime.Now.ToString("yyyy/MM/dd HH:mm:ss") })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label">Beschrijving</label>
            <div class="col-sm-12">
                @Html.TextAreaFor(o => o.Description, new { @required = "required" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label">Contact</label>
            <div class="col-sm-12">
                <input type="checkbox" name="contactMe"> Ja, neem contact met mij op.
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <br />
                <input type="submit" value="Volgende stap" class="btn btn-default" />
            </div>
        </div>
    }
</div>


