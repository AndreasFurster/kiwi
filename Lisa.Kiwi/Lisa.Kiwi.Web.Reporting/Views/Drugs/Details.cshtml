@model OriginalReport
@{
    ViewBag.Title = "Report";
}

<div class="center-box">
    <div class="row">
        <div class="col-xs-12">
            <h2>Melding</h2>

            @using (Html.BeginForm("Details"))
            {
                @Html.ValidationSummary();
                @Html.AntiForgeryToken();

                <div class="form-group">
                    @Html.LabelFor(b => b.Building, new { @class = "col-xs-12" })
                    <div class="col-xs-12">
                        @Html.DropDownList("buildings", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(o => o.Location, new {@class = "col-xs-12"})
                    <div class="col-xs-12">
                        @Html.TextBoxFor(o => o.Location, true, htmlAttributes: new {@required = "required", @class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(o => o.Time, new {@class = "col-xs-12"})
                    <div class="col-xs-12">
                        @Html.TextBoxFor(o => o.Time, true, htmlAttributes: new { @value = DateTime.Now.ToString("dd-MM-yyyy HH:mm"), @required = "required", @class = "form-control datefield" })
                        @Html.HiddenFor(o => o.Offset)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(o => o.Description, new {@class = "col-xs-12"})
                    <div class="col-xs-12">
                        @Html.TextAreaFor(o => o.Description, true, htmlAttributes: new { @required = "required", @class = "form-control", @rows = "3" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12">Was er een voertuig aanwezig?</label>
                    <div class="col-xs-12">
                        <input type="checkbox" id="vehicle" name="vehicle" checked /> <span>Ja, er was een voertuig.</span>    
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <br />
                        <input type="submit" name="nextBtn" value="Volgende" class="btn btn-default btn-report" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    var offset = new Date().getTimezoneOffset();
    document.getElementById('Offset').value = offset;
</script>